<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="actionBarStyle">@style/CustomizedActionbar</item>
        <item name="actionBarTabStyle">@style/CustomizedActionbarTabs</item>
        <item name="android:actionBarStyle">@style/CustomizedActionbar</item>
        <item name="android:actionBarTabStyle">@style/CustomizedActionbarTabs</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomizedActionbar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/ActionBarColor</item>

        <!-- Support library compatibility -->
        <item name="background">@color/ActionBarColor</item>
        <item name="android:divider">@drawable/tabdivider</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="CustomizedActionbarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">

        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <item name="android:divider">@drawable/tabdivider</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_tab_indicator</item>
    </style>

</resources>